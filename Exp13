#include<stdio.h>
int main ()
{
	int i,n,value,sum=0;
	float avg;
	printf("enter the number of values:");
	scanf("%d",&n);
	printf("enter the values:\t");
	for(i=1;i<=n;i++)
	{
		scanf("%d",&value);
		sum=sum+value;
	}
	avg=sum/n;
	printf("\nthe sum of %d values is:%d\n",n,sum);
	printf("\nthe avg of %d values is:%f",n,avg);
	return 0;
}
